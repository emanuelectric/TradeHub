<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="16dp"
    tools:context=".activities.ItemTendenciaDetalleActivity">

    <!-- Nombre de la Tendencia -->
    <TextView
        android:id="@+id/textview_nombre_tendencia_detalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Nombre de la Tendencia" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <!-- Descripción de la Tendencia -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#555555"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_descripcion_tendencia_detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:text="Descripción de la Tendencia" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
