<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    android:background="#000000"
    android:gravity="center">

    <TextView
        android:id="@+id/textview_Publicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publicar"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edittext_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:hint=" "
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/spinner_simbolo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/spinner_tendencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:textColor="#000000" />

    <Spinner
        android:id="@+id/spinner_indicador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edittext_descripcion"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:hint=" "
        android:textColor="#000000"
        android:gravity="top|start" />


    <Button
        android:id="@+id/button_cargar_imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="abrirGaleria"
        android:text="Cargar Imagen" />

    <ImageView
        android:id="@+id/imageview_seleccionadaPublicar"
        android:layout_width="253dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:src="@drawable/backgroundImage"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/button_publicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publicar"
        android:backgroundTint="#FFA500"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:cornerRadius="30dp" />

</LinearLayout>
